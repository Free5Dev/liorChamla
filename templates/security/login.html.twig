{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block body %}
    <h1>Formulaire d'identification</h1>
    <form action="{{ path('security_login') }}" method="post">
        
        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" name="_username" id="login" placeholder="Login..." class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Mots de passe</label>
            <input type="password" name="_password" id="password" placeholder="Mots de passe" class="form-control" value="{{ last_username }}">
        </div>
        <button type="submit" class="btn btn-success">Connexion</button>
    </form>
{% endblock %}